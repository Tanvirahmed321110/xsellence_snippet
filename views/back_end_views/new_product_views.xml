<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--========  Record Action   ========-->
        <record model="ir.actions.act_window" id="xsellence_snippets_new_product_action_id">
            <field name="name">New Product</field>
            <field name="res_model">xsellence_snippets.new_product</field>
            <field name="view_mode">list,form</field>
        </record>


        <!--========   List View   ========-->
        <record model="ir.ui.view" id="xsellence_snippets_list_id">
            <field name="name">New Product</field>
            <field name="model">xsellence_snippets.new_product</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="price"/>
                </list>
            </field>
        </record>


        <!--========   Form View   ========-->
        <record model="ir.ui.view" id="xsellence_snippets_form_id">
            <field name="name">New Product</field>
            <field name="model">xsellence_snippets.new_product</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>

                            <group>
                                <field name="name"/>
                                <field name="price"/>
                                <field name="description"/>
                            </group>

                            <!-- Details -->
                            <group string="">
                                <field name="image_1920" widget="image" class="oe_avatar"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>